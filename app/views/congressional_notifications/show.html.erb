<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="bigger">Congressional Notification: <%= @congressional_notification.name %> <%= @congressional_notification.cn_number %></span>
        <div class="pull-right">

        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= render 'cn_status_info' %>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Projects Attached to this Congressional Notification
        <div class="pull-right">
          <% if current_user.role == 'budget' ||  current_user.admin? %>
              <%= link_to 'Edit', edit_congressional_notification_path(@congressional_notification), class: 'btn btn-default btn-xs' %>
          <% end %>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <ul class="list-inline">
          <% @congressional_notification.projects.each do |project| %>
              <li>
                <%= link_to(project) do %>
                    <span data-toggle="tooltip" title="<%= project.name %>"><%= project.program.name %>-<%= project.id %></span>
                <% end %>
              </li>
          <% end %>
        </ul>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>

<p>
  <strong>Clearances:</strong>
<ul>
  <% @congressional_notification.clearances.each do |clearance| %>
      <li><%= clearance.name %> - <%= clearance.clearance_status %> - <%= clearance.clearance_date %> </li>
  <% end %>
</ul>
</p>

<p>
  <strong>Attached Files:</strong>
<ul>
  <% @congressional_notification.attached_files.each do |attached_file| %>
      <li><%= link_to attached_file.name, attached_file.attachable_document.url %> </li>
  <% end %>
</ul>
</p>

<p>
  <strong>Comments:</strong>
<ul>
  <% @congressional_notification.comments.each do |comment| %>
      <li><%= comment.comment_date %> - <%= comment.comments %> - <%= comment.user.name %> - <%= comment.user.role %> </li>
  <% end %>
</ul>
</p>

<%= link_to 'Edit', edit_congressional_notification_path(@congressional_notification) %> |
<%= link_to 'Back', congressional_notifications_path %>
