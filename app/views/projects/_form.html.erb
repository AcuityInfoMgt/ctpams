<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :budget_requested %>
    <%= f.input :fiscal_year %>
    <%= f.input :objective %>
    <%= f.input :interest %>
    <%= f.input :law_enforcement %>
    <%= f.input :coordination %>
    <%= f.input :lessons_learned %>
    <%= f.input :sustainability %>
    <%= f.input :city_province %>
    <%= f.input :program_audience %>
    <%= f.input :reprogram %>
    <%= f.input :reprogram_comments %>
    <%= f.input :implementation_status %>
    <%= f.select(:implementation_status, Project.implementation_statuses.keys.map {|implementation_status| [implementation_status.titleize,implementation_status]}) %>
    <%= f.input :program_id %>
    <%= f.input :user_id %>
    <%= f.input :is_archived %>
    <%= f.input :is_denied %>
    <%= f.input :is_active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
