<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :budget_requested %>
    <%= f.input :fiscal_year %>
    <%= f.input :objective %>
    <%= f.input :interest %>
    <%= f.input :law_enforcement %>
    <%= f.input :coordination %>
    <%= f.input :lessons_learned %>
    <%= f.input :sustainability %>
    <%= f.input :city_province %>
    <%= f.input :program_audience %>
    <%= f.input :reprogram %>
    <%= f.input :reprogram_comments %>
    <%= f.input :implementation_status %>
    <%= f.select(:implementation_status, Project.implementation_statuses.keys.map {|implementation_status| [implementation_status.titleize,implementation_status]}) %>
    <%= f.input :program_id %>
    <%= f.input :user_id %>
    <%= f.input :is_archived %>
    <%= f.input :is_denied %>
    <%= f.input :is_active %>
    <h3>Budget Items</h3>
    <div id="tasks">
      <%= f.simple_fields_for :budget_items do |budget_item| %>
        <%= render 'budget_item_fields', :f => budget_item %>
      <% end %>
          <div class="links">
            <%= link_to_add_association 'add budget_item', f, :budget_items %>
          </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
