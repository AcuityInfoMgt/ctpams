<table class="table table-striped table-hover">
  <% comment_entity.comments.order(:comment_date).each do |comment| %>
      <tr>
        <td class="text-muted" style="width:100px"><%= comment.comment_date %></td>
        <td><strong><%= comment.user.name %> - <%= comment.user.role.titleize %></strong> <br><%= comment.comments %></td>
      </tr>
  <% end %>
</table>
