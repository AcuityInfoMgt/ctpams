<p id="notice"><%= notice %></p>

<%= current_user.project_owner?(@project.id) %>
<%= current_user.in_project_region?(@project.id) %>
<%= current_user.admin? %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="bigger"><%= @project.program.name %>-<%= @project.id %>: <%= @project.name %></span>
        <div class="pull-right">

        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= render 'project_status_info' %>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-list-alt fa-fw"></i> Project Details
        <div class="pull-right">

        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= render 'project_core_info' %>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
</div>



<p>
  <strong>Is archived:</strong>
  <%= @project.is_archived %>
</p>

<p>
  <strong>Is denied:</strong>
  <%= @project.is_denied %>
</p>

<p>
  <strong>Is active:</strong>
  <%= @project.is_active %>
</p>



<p>
  <strong>CNs:</strong>
<ul>
  <% @project.congressional_notifications.each do |cn| %>
      <li><%= link_to cn.cn_number, cn %> </li>
  <% end %>
</ul>
</p>


<p>
  <strong>Obligations:</strong>
    <ul>
      <% @project.obligations.each do |obligation| %>
          <li><%= obligation.obligation_number %> - <%= obligation.obligation_amount %> - <%= obligation.obligation_date %> </li>
      <% end %>
    </ul>
</p>

<p>
  <strong>Clearances:</strong>
<ul>
  <% @project.clearances.each do |clearance| %>
      <li><%= clearance.name %> - <%= clearance.clearance_status %> - <%= clearance.clearance_date %> </li>
  <% end %>
</ul>
</p>

<p>
  <strong>Attached Files:</strong>
<ul>
  <% @project.attached_files.each do |attached_file| %>
      <li><%= link_to attached_file.name, attached_file.attachable_document.url %> </li>
  <% end %>
</ul>
</p>

<p>
  <strong>Comments:</strong>
<ul>
  <% @project.comments.each do |comment| %>
      <li><%= comment.comment_date %> - <%= comment.comments %> - <%= comment.user.name %> - <%= comment.user.role %> </li>
  <% end %>
</ul>
</p>



<%= render 'project_review_actions' %>