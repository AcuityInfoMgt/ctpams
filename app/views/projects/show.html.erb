        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= render 'project_documents' %>
      </div>
      <!-- /.panel-body -->
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-list-alt fa-fw"></i> Comments
