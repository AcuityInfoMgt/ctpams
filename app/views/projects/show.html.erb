<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="bigger"><%= @project.program.name %>-<%= @project.id %>: <%= @project.name %></span>
        <div class="pull-right">

        </div>
      </div>
